.message
  .top-message
    .top-message__user-name
      = message.user.name
    .top-message__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .bottom-message
    - if message.content.present?
      %p.bottom-message__content
        = message.content
    = image_tag message.image.url, class: 'main-bar-message__image' if message.image.present?